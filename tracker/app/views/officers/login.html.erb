<p><b>**** By entering this system and entering any data requested, I am giving my consent to share data related to

my involvement with the student organization. Should I no longer wish to share the data I've provided,

I will notify the student organization. ****</b></p>



<%if !flash[:notice].blank?%>
    <div class="notice">
      <%=flash[:notice]%>
    </div>
<%end%>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  This is a boostrap modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bootstrap Test!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="officers login">
  <h2>Login</h2>

  <%= form_tag(officers_attemptLogin_path :method => 'post') do %>

    <table summary="Officer form fields">
      <tr>
        <th>Email</th>
        <td><%= text_field_tag(:email, params[:email]) %></td>
      </tr>
      <tr>
        <th>Password</th>
        <td><%= text_field_tag(:password) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Log in") %>
    </div>

  <% end %>
</div>
<p>Don't have an account? Register here:</p>
<button>
    <%= link_to("Create an Account", new_officer_path, :class => 'action new') %>
</button>
