<% if !flash[:notice].blank?%>
    <div class="notice">
        <%= flash[:notice]%>
    </div>
<%end%>

<br>

<div class="Members index">
    <h2> Manage Members </h2>

      <%= link_to '<button type="button">Add a member</button>'.html_safe, new_member_path, :class => 'action new' %>
      <%= link_to '<button type="button">Add/Substract Points</button>'.html_safe, members_newPointEntry_path(@points), :class => 'action newPointEntry' %>

    <table class="listings" summary="member list">
     <tr class="header">
       <th><%= sortable "name"%></th>

      <th><%= sortable "email"%></th>

      <th><%= sortable "uin"%></th>

      <th><%= sortable "points"%></th>
    </tr>
    <% @members.each do |member| %>
    <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td class="center"><%= member.uin %></td>
        <td class="center"><%= member.points %></td>
        <td class="actions">
            <%= link_to("Details", member_path(member), :class => 'action show') %>
            <%= link_to("Edit", edit_member_path(member), :class => 'action edit') %>
            <%= link_to("Delete", delete_member_path(member), :class => 'action delete') %>
        </td>
    </tr>
    <% end %>
    </table>
    

</div>
